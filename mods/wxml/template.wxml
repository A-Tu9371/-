<template name="nav-scroll">
  <scroll-view scroll-x scroll-into-view="{{toView}}" scroll-with-animation="{{true}}">
  <block wx:for="{{nav}}"  wx:for-index="navIndex" wx:key="{{navIndex}}">
    <view id="item{{navIndex+1}}" class='scroll-view-item {{navIndex == currentIndex ? "current" : ""}}' data-toView="item{{navIndex+1}}" data-index="{{navIndex}}" bindtap='changeNav'>{{item.categoryName}}</view>
  </block>
</scroll-view>
</template>